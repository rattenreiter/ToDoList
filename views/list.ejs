<%- include('header'); -%>
    <div class="box" id="heading">
        <h1>
            <%- listTitle %>
        </h1>
</div>
<div class="box">
    <% items.forEach((item) => { %>
        <form action="/delete" method="post">
            <div class="item">
                <input 
                    type="checkbox" 
                    value="<%= item._id %>" 
                    name="doneItem" 
                    onChange="this.form.submit()"
                >
                <p><%= item.listItem %></p>
            </div>
        </form>
    <% }) %>

    <form class="item" action="/" method="post">
        <input 
            type="text" 
            name="newItem" 
            placeholder="New Item" 
            autocomplete="off"
        >
        <button 
            type="submit" 
            name="listButton" 
            value="<%= listTitle %>"
        >
            +
        </button>
    </form>
</div>
<%- include('footer') -%>